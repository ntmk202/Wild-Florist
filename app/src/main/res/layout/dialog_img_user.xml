                android:id="@+id/user_img_avarta10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/default_avarta" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>