<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgr_pager">


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/layoutControl"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="625dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_navigation"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bottom_home"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:src="@drawable/ic_launcher_home" />

            <ImageView
                android:id="@+id/img_bottom_garden"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:src="@drawable/gardening_unselect" />

            <ImageView
                android:id="@+id/img_bottom_blog"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:src="@drawable/blog" />

            <ImageView
                android:id="@+id/img_bottom_notification"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:src="@drawable/notification_unselected" />

            <ImageView
                android:id="@+id/img_bottom_user"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:src="@drawable/user_unselect" />
        </LinearLayout>

    </RelativeLayout>
</layout>